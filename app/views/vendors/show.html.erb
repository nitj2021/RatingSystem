
<div class="row">
  <div class="col-sm-6 col-md-2">
      <img class="img-thumbnail" src="/assets/unknown.jpg" alt="..." width="100" height="100">
      <div class="caption">
        <h3><%=@vendor.name%></h3>
        
      </div>
  		    
  </div>
  <div class="col-sm-6 col-md-5" >
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Business Type</strong> <%=@vendor.business_type%></h3>
  </div>
  <div class="panel-body">
		<%=@vendor.description%>
		</div>
 </div>

  </div>
  <div class="col-sm-6 col-md-2" >
  	<div id ="evaluator_voting_div">
  		<%= render "/shared/evaluator_vote_div"%>
	</div>
</div>
</div>

<hr/>
<p><strong>Comments</strong></p>
<hr/>
<%@vendor.comments.each do |comment|%>
<div class="panel panel-default" style="min-height:100px">
			
			<div class="panel-body">
				<blockquote>
  <p><%=comment.comment%>.</p>
  <small><%=comment.evaluator.name.capitalize%></small>
</blockquote>
			</div>
		</div>

<% end %>
<hr/>
<%if evaluator_signed_in?%>
<%= render "/comments/new" %>
<%end%>